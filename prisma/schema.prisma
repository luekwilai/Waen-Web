generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Project {
  id           String   @id @default(cuid())
  title        String
  category     String
  description  String?
  desktopImage String?
  mobileImage  String?
  websiteUrl   String?
  sortOrder    Int      @default(0)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("projects")
}

model Package {
  id          String   @id @default(cuid())
  name        String
  nameEn      String?
  price       Int
  description String?
  features    String?
  duration    String?
  isPopular   Boolean  @default(false)
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("packages")
}

model Inquiry {
  id        String        @id @default(cuid())
  name      String
  email     String
  phone     String?
  company   String?
  packageId String?
  message   String
  status    InquiryStatus @default(NEW)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@map("inquiries")
}

enum Role {
  ADMIN
}

enum InquiryStatus {
  NEW
  READ
  RESPONDED
  ARCHIVED
}
